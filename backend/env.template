# ================================
# Backend Environment Configuration
# ================================

# Environment
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Security Keys
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345678901234567890
SESSION_SECRET=your_session_secret_here_12345678901234567890123456789012345678
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_12345678901234567890123

# ================================
# Veo 3 API Configuration
# ================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Veo 3 Settings
VEO3_MODEL=veo-3.0-generate-preview
VEO3_FAST_MODEL=veo-3.0-fast
VEO3_MAX_DURATION=10
VEO3_DEFAULT_FPS=30
VEO3_DEFAULT_RESOLUTION=1920x1080

# ================================
# Google Cloud Platform
# ================================
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# ================================
# Database Configuration
# ================================
DATABASE_URL=file:./prisma/dev.db
DATABASE_SSL=false

# ================================
# Redis Configuration (Optional)
# ================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ================================
# Storage Configuration
# ================================
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
CDN_URL=
CDN_CACHE_CONTROL=public, max-age=31536000

# ================================
# FFmpeg Configuration
# ================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_THREADS=4
FFMPEG_TIMEOUT=300000

# ================================
# Generation Limits
# ================================
MAX_PROMPT_LENGTH=500
MAX_GENERATIONS_PER_USER_PER_DAY=10
MAX_FILE_SIZE_MB=100

# ================================
# Export Settings
# ================================
EXPORT_CRF=18
EXPORT_PRESET=medium

# ================================
# Queue Configuration
# ================================
QUEUE_GENERATION_CONCURRENCY=2
QUEUE_EXPORT_CONCURRENCY=4
QUEUE_CLEANUP_SCHEDULE=0 2 * * *

# Job Retention (in milliseconds)
JOB_RETENTION_COMPLETED=86400000
JOB_RETENTION_FAILED=259200000

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_GENERATION_PER_HOUR=5

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_METRICS=true
SENTRY_DSN=

# ================================
# Feature Flags
# ================================
ENABLE_QUEUES=false

# ================================
# Optional Services
# ================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
