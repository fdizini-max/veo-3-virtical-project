# ================================
# API Keys & External Services
# ================================

# Google Gemini API (Veo 3 Access)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite  # As per user preference

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account.json

# ================================
# Database Configuration
# ================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/vertical_veo3
DATABASE_SSL=false

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ================================
# Application Settings
# ================================

# Environment
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# ================================
# Storage Configuration
# ================================

# Storage Type: 'gcs' (Google Cloud Storage), 'aws' (S3), or 'local'
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
CDN_CACHE_CONTROL=public, max-age=31536000

# ================================
# FFmpeg Configuration
# ================================

FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_THREADS=4
FFMPEG_TIMEOUT=300000  # 5 minutes in ms

# ================================
# Video Generation Settings
# ================================

# Veo 3 API Settings
VEO3_MODEL=veo-3.0-generate-preview
VEO3_FAST_MODEL=veo-3.0-fast
VEO3_MAX_DURATION=10  # seconds
VEO3_DEFAULT_FPS=30
VEO3_DEFAULT_RESOLUTION=1920x1080

# Generation Limits
MAX_PROMPT_LENGTH=500
MAX_GENERATIONS_PER_USER_PER_DAY=10
MAX_FILE_SIZE_MB=100

# ================================
# Export Settings
# ================================

# Export Presets
EXPORT_PRESET_TIKTOK=1080x1920,30fps
EXPORT_PRESET_REELS=1080x1920,30fps
EXPORT_PRESET_SHORTS=1080x1920,30fps

# Export Quality
EXPORT_CRF=18  # Lower = better quality, higher file size
EXPORT_PRESET=medium  # ultrafast, fast, medium, slow, veryslow

# ================================
# Queue Configuration
# ================================

# BullMQ Settings
QUEUE_GENERATION_CONCURRENCY=2
QUEUE_EXPORT_CONCURRENCY=4
QUEUE_CLEANUP_SCHEDULE=0 2 * * *  # 2 AM daily

# Job Retention
JOB_RETENTION_COMPLETED=86400000  # 24 hours in ms
JOB_RETENTION_FAILED=259200000    # 72 hours in ms

# ================================
# Rate Limiting
# ================================

RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_GENERATION_PER_HOUR=5

# ================================
# Monitoring & Logging
# ================================

LOG_LEVEL=info  # error, warn, info, debug
LOG_FILE_PATH=./logs
ENABLE_METRICS=true
SENTRY_DSN=

# ================================
# Payment Processing (Optional)
# ================================

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_BASIC=
STRIPE_PRICE_ID_PRO=

# ================================
# Email Service (Optional)
# ================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@vertical-veo3.com

# ================================
# Analytics (Optional)
# ================================

GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
POSTHOG_API_KEY=
